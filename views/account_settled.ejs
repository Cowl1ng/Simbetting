<%- include('./headers/_account.ejs') %>
<div class="jumbotron big-color">
<div class="row">
  <div class="col-md-3">
    <h3 style="color: #E3E3E3">Welcome <%= name %></h3>
    <h3 style="color: #E3E3E3">Balance: £ <%= balance  %></h3>
    <a href="/users/logout" class="btn btn-primary" style="background-color: #799DB1; color: #E3E3E3; font-size: large; ">Logout</a>
    <br><br>
    <a href="/account/settled/all" style="color: #E3E3E3"> See all settled bets  %></a>
  </div>
  <div class="col-md-6" role="navigation">
    <br>
    <h2 style="text-align: center; font-size: xx-large; color:#E3CF5B">Your bets</h2>
    <ul class="nav nav-pills nav-justified">
      <li role="presentation" class="nav-item"><a class="nav-link" style="font-size: xx-large; color: #E3E3E3" href="/account">Open</a></li>
      <li role="presentation" class="nav-item"><a class="nav-link" style="font-size: xx-large; color:#E3CF5B" href="/account/settled">Settled</a></li>
      <li role="presentation" class="nav-item"><a class="nav-link" style="font-size: xx-large; color: #E3E3E3" href="/account/leaderboard">Leaderboard</a></li>
    </ul>
  </div>
  </div>
  <div class="row">
  <div class ="col-md-3">
  </div>
  <div class="col-md-6">
    <br>
<% userBets.forEach(userBet => {  %>
  <% if(userBet.settled == true) { %>
    <% if(userBet.win == true) { %>
      <h4 style="color: #E3E3E3">£ <%= userBet.stake %> bet on <%= userBet.type %> in <a style="color:#E3CF5B" href="/games/<%= userBet.game %>"><%= userBet.game_title %></a>.</h4><h4><mark style=" background-color:green">won: £ <%= userBet.winnings %></mark></h4>
      <% } else { %>
        <h4 style="color: #E3E3E3">£ <%= userBet.stake %> bet on <%= userBet.type %> in <a style="color:#E3CF5B" href="/games/<%= userBet.game %>"><%= userBet.game_title %></a>.</h4><h4><mark style=" background-color:red">LOST</mark></h4>
      <% }} %>  
<% }) %>
<h2 style="text-align: center; font-size: xx-large; color:#E3CF5B">Fantasy Bets</h2>
<% userFantasyBets.forEach(userFantasyBet => {  %>
  <% if(userFantasyBet.settled == true) { %>
    <% if(userFantasyBet.win == true) { %>
      <h4 style="color: #E3E3E3">£ <%= userFantasyBet.stake %> bet on <%= userFantasyBet.type %></h4><h4><mark style=" background-color:green">won: £ <%= userFantasyBet.winnings %></mark></h4>
      <% } else { %>
        <h4 style="color: #E3E3E3">£ <%= userFantasyBet.stake %> bet on <%= userFantasyBet.type %></h4><h4><mark style=" background-color:red">LOST</mark></h4>
      <% }} %>  
<% }) %>
</div>
</div>
</div>