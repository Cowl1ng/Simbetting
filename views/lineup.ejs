<%- include('_headers_public.ejs') %>
<div class="row">
<form action="/player/lineup_change" method="POST" class="form-inline">
  <div class="col-md-6">
  <h3>To change lineup select a formation</h3>
  </div>
  <div class="col-md-3">
  <select class="form-control" name="formation">
    <option value="343">3-4-3</option>
    <option value="352">3-5-2</option>
    <option value="433">4-3-3</option>
    <option value="442">4-4-2</option>
    <option value="451">4-5-1</option>
    <option value="523">5-2-3</option>
    <option value="532">5-3-2</option>
    <option value="541">5-4-1</option>
  </select>
  </div>
  <div>
  <button type="submit" class="btn btn-info">Change Lineup</button>
  </div>
</form>
</div>
<br><br>
<h2>Current Lineup</h2>
<div class="row">
  <div class="col-md-3">
    <h4>Goalkeeper</h4>
  </div>
  <div class="col-md-3">
    <h4>Defenders</h4>
  </div>
  <div class="col-md-3">
    <h4>Midfielders</h4>
  </div>
  <div class="col-md-3">
    <h4>Forwards</h4>
  </div>
</div>
<div class="row">
<div class="col-md-3">
<% goalkeepers.forEach(player => {  %>
  <p class="lead mb-3">Name: <%= player.name %></p>
  <p class="lead mb-3">Country: <%= player.country %></p>
  <br>
<% }) %>
</div>
<div class="col-md-3">
<% defenders.forEach(player => {  %>
  <p class="lead mb-3">Name: <%= player.name %></p>
  <p class="lead mb-3">Country: <%= player.country %></p>
  <br>
<% }) %>
</div>
<div class="col-md-3">
<% midfielders.forEach(player => {  %>
  <p class="lead mb-3">Name: <%= player.name %></p>
  <p class="lead mb-3">Country: <%= player.country %></p>
  <br>
<% }) %>
</div>
<div class="col-md-3">
<% forwards.forEach(player => {  %>
  <p class="lead mb-3">Name: <%= player.name %></p>
  <p class="lead mb-3">Country: <%= player.country %></p>
  <br>
<% }) %>
</div>
</div>