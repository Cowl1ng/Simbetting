<%- include('_headers_public.ejs') %>
<br>
<h2> <%= game.team_a %> vs <%= game.team_b %></h2>
<p class="lead mb-3">User Balance: <%= users.balance %></p>
<div class="row row-no-gutters">
  <div class="col-md-4">
<table class="table table-striped table bordered">
  <tbody>
  <tr>
    <th>Lines</th>
    <th>Odds</th>
  </tr>
  <tr>
    <td><%= game.team_a %></td>
    <td><%= game.odds_a %></td>
  </tr>
  <tr>
    <td><%= game.team_b %></td>
    <td><%= game.odds_b %></td>
  </tr>
  <tr>
    <td>Draw</td>
    <td><%= game.odds_draw %> %></td>
  </tr>
  <tr>
    <td>Over <%= game.ougoals %> goals</td>
    <td><%= game.odds_ogoals %></td>
  </tr>
  <tr>
    <td>Under <%= game.ougoals %> goals</td>
    <td><%= game.odds_ugoals %></td>
  </tr>
  </tbody>
</table>
</div>
<div class="col-md-6">
  <h3>Place new bet</h3>
  <form action="/games/list" method="POST" class="form-inline">
    <div class="form-group">
      <label for="stake">Stake</label>
      <input type="number" step="0.01" min="1" max="<%= users.balance%>" class="form-control" name="stake"  placeholder="Stake">
    </div>
    <select class="form-control" name="bettype">
      <% for(var i=0; i < bettype.length; i++) { %>
         <option value="<%= bettype[i] %>"><%= bettype[i] %></option>
      <% } %>
      </select>
    <div class="form-group">
      <input type="text" class="form-control" name="gameid" value="<%= game.id %>" placeholder="<%= game.id %>" hidden>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="game_title" value="<%= game.team_a %> vs <%= game.team_b %>" placeholder="<%= game.id %>" hidden> </div>
    <button type="submit" class="btn btn-info">Bet</button>
  </form>
</div>
</div>

