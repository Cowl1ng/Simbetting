<%- include('_headers_public.ejs') %>
<h2>New Lineup, your selected formation is <%= formation%></h2>
<form action="/player/lineup" method="POST" class="form-inline">
<div>
<select class="form-control" name="goalkeeper">
  <% for(var i=0; i < goalkeepers.length; i++) { %>
     <option value="<%= goalkeepers[i] %>" ><%= goalkeepers[i] %></option>
  <% } %>
  </select>
<select class="form-control" name="player_1">
  <% for(var i=0; i < defenders.length; i++) { %>
     <option value="<%= defenders[i] %>" ><%= defenders[i] %></option>
  <% } %>
</select>
