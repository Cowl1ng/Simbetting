<%- include('./games/_headers_public.ejs') %>
<div class="row">
  <div class="col-md-3">
  <h1 class="mt-4">Account</h1>
  </div>
  <div class="col-md-6" role="navigation">
    <br>
    <h2>Your bets</h2>
    <ul class="nav nav-pills nav-justified">
      <li role="presentation" class="nav-item"><a class="nav-link active" style="font-size: xx-large;" href="/account">Open</a></li>
      <li role="presentation" class="nav-item"><a class="nav-link" style="font-size: xx-large;" href="/account/settled">Settled</a></li>
      <li role="presentation" class="nav-item"><a class="nav-link" style="font-size: xx-large;" href="/account/leaderboard">Leaderboard</a></li>
    </ul>
  </div>
  </div>
  <div class="row">
  <div class ="col-md-3">
  <h3>Welcome <%= name %></h3>
  <h3>Balance: <%= balance  %></h3>
  <a href="/users/logout" class="btn btn-primary">Logout</a>
  </div>
  <div class="col-md-3">
    <br>
<% userBets.forEach(userBet => {  %>
  <% if(userBet.settled == false) { %>
  <p style="font-size: x-large;" class="lead mb-3">£ <%= userBet.stake %> bet on <%= userBet.type %> for the game <a href="/games/<%= userBet.game %>"><%= userBet.game_title %></a>. If it wins you will win: £ <%= userBet.winnings %></p>
  <% } %>
<% }) %>
<h2>Fantasy Bets</h2>
<% userFantasyBets.forEach(userFantasyBet => {  %>
  <% if(userFantasyBet.settled == false) { %>
  <p class="lead mb-3">£ <%= userFantasyBet.stake %> bet on <%= userFantasyBet.type %> for the game <a href="/fantasy/<%= userFantasyBet.game %>"><%= userFantasyBet.game_title %></a>. If it wins you will win: £ <%= userFantasyBet.winnings %></p>
  <% } %>
<% }) %>
</div>
</div>
